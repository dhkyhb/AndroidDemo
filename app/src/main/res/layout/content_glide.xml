<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_glide"
        tools:context=".ui.glideActivity">

    <ScrollView
            style="@style/widget_MatchM"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout style="@style/widget_MatchM"
                      android:gravity="center_horizontal"
                      android:orientation="vertical">

            <ImageView
                    android:id="@+id/iv_showImg"
                    style="@style/widget_WrapW"
                    android:layout_gravity="center_horizontal"/>

            <Button android:id="@+id/btn_glide_loag"
                    style="@style/widget_MatchW"
                    android:text="glide_load_image"/>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>